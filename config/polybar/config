[module/usb]
type = custom/script
interval = 5
; Displays the devices in the bar
exec = ~/.config/polybar/usb.sh
; Execute the script if udiskie is runned
exec-if = pgrep -x udiskie

click-left = udiskie-umount --detach -a

label-foreground = ${colors.foreground}

format = "<label>"
format-padding = 1


